                  0xF000:
                  start1:
F000: A9 00            LDA    #0           ; Set Port B to ...
F002: 8D 83 02         STA    RIOT_B_DDR   ; ... inputs (switches)
F005: A9 FF            LDA    #0xFF        ; Set Port A to ...
F007: 8D 81 02         STA    RIOT_A_DDR   ; ... outputs (joysticks)
                  
                  here:
F00A: AD 82 02         LDA    RIOT_B_DATA  ; Copy switch states ...
F00D: 8D 80 02         STA    RIOT_A_DATA  ; ... to joystick lines
F010: 4C 0A F0         JMP    here         ; Forever
                  
                  0xF800:
                  start2:
F800: A9 00            LDA    #0
F802: 8D 83 02         STA    RIOT_B_DDR
F805: A9 FF            LDA    #0xFF
F807: 8D 81 02         STA    RIOT_A_DDR
F80A: A9 A5            LDA    #0xA5
F80C: 8D 80 02         STA    RIOT_A_DATA
                  here2:
F80F: 4C 0F F8         JMP    here2
                  
                  0xFFFA:
FFFA: 00 F8            .word  start2        ; NMI vector
FFFC: 00 F8            .word  start2        ; RESET vector
FFFE: 00 F8            .word  start2        ; IRQ vector
